<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Website Layout | InSync</title> 
    <link rel="stylesheet" href="styles/homepage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
   </head>
<body>
  <nav>
    <div class="menu">
      <div class="logo">
        <a href="homepage">
          <img src="/images/logos.png" alt="InSync Logo" class="logo-img">
        </a>
      </div>
      <ul>
        <li><a href="/profile">Account</a></li>
      </ul>
    </div>
  </nav>

<head>
  <meta charset="UTF-8">
  <title>Translation History</title>
  <link rel="stylesheet" href="/styles/homepage.css">
</head>
<body>
  <!-- Include your navigation here -->
  <div class="history-container">
    <h1>Translation History</h1>
    <table>
      <thead>
        <tr>
          <th>Original Text</th>
          <th>Translated Text</th>
          <th>Language</th>
          <th>Date & Time</th>
        </tr>
      </thead>
      <tbody>
        <% translations.forEach(function(translation) { %>
          <tr>
            <td><%= translation.original_text %></td>
            <td><%= translation.translate_text %></td>
            <td><%= translation.target_lang %></td>
            <td class="timestamp"><%= new Date(translation.timestamp).toLocaleString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
